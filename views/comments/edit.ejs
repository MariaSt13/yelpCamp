<%include ../partials/header%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;">Edit Comment</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label class="sr-only">Comment text</label>
					<textarea class="form-control" type="text" name="comment[text]" placeholder="Enter your comment here"><%=comment.text%></textarea>
				</div>
				<button class="btn btn-primary btn-lg btn-block">Submit!</button>
			</form>
			<a href="/campgrounds/<%=campground_id%>">Go back</a>
		</div>
	</div>
</div>

<%include ../partials/footer%>