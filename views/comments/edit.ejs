<%include ../partials/header%>

<div class="row">
	<h1 class="text-center">Edit Comment</h1>
	<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
		<form action="/campgrounds/<%=campground_slug%>/comments/<%=comment._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<label class="sr-only">Comment text</label>
				<textarea class="form-control" type="text" name="comment[text]"
					placeholder="Enter your comment here"><%=comment.text%></textarea>
			</div>
			<button class="btn btn-primary btn-lg btn-block">Submit!</button>
		</form>
		<a href="/campgrounds/<%=campground_slug%>">Go back</a>
	</div>
</div>

<%include ../partials/footer%>